{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": [
            "es6"
        ],
        "sourceMap": true,
        "rootDir": ".",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "types": [
            // add node as an option
            "node"
         ],
        "typeRoots": [
            // add path to @types
            "node_modules/@types",
            "typings"
         ]
    },
    "exclude": [
        "node_modules/**/*",
        "out",
        "typings",
        "test",
        ".vscode-test"
    ]
}